<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="4.0"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <!-- ControllerServlet -->
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.serezk4.server.servlet.ControllerServlet</servlet-class>
    </servlet>

    <!-- ControllerServlet -->
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!-- AreaCheckServlet -->
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.serezk4.server.servlet.area.AreaCheckerServlet</servlet-class>
    </servlet>

    <!-- AreaCheckServlet -->
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/areaCheck</url-pattern>
    </servlet-mapping>

    <!-- index page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>